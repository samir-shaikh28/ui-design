<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesignTestPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bottom_nav_tint_color</item>
        <item name="colorPrimaryVariant">@color/bottom_nav_tint_color</item>
        <item name="colorOnPrimary">@color/primary_text_color</item>

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>


    <style name="Base.Theme.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="elevation">0dp</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="strokeColor">@color/gray_light</item>
        <item name="useCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <dimen name="card_corner_radius">8dp</dimen>
</resources>